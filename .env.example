# ============================================================================
# OPTIONAL: Vault Configuration Defaults
# ============================================================================
# These can be adjusted after deployment via setter functions.

# Initial interest rate in basis points (10% = 1000)
INITIAL_RATE_BPS=1000

# Minimum deposit amount (in wei, 0.1 ETH = 100000000000000000)
MIN_DEPOSIT=0

# Maximum deposit per address (in wei, unlimited = type(uint256).max)
MAX_DEPOSIT_PER_ADDRESS=1000000000000000000000

# Maximum total vault TVL (in wei, unlimited = type(uint256).max)
MAX_TOTAL_DEPOSITS=1000000000000000000000000

# Protocol fee in basis points (1% = 100, 0 = disabled)
PROTOCOL_FEE_BPS=100

# Accrual period in seconds (86400 = 1 day)
ACCRUAL_PERIOD_SECONDS=86400

# Circuit breaker: max daily accrual in basis points (10% = 1000)
MAX_DAILY_ACCRUAL_BPS=1000

# ============================================================================
# OPTIONAL: CCIP Configuration Defaults
# ============================================================================

# Per-chain protocol fee (1% = 100, 0 = disabled)
CCIP_PROTOCOL_FEE_BPS=100

# Per-send cap (in wei, unlimited = type(uint256).max)
CCIP_PER_SEND_CAP=100000000000000000000

# Daily bridge limit (in wei, unlimited = type(uint256).max)
CCIP_DAILY_LIMIT=500000000000000000000

# Bridged amount cap on receiver (in wei)
CCIP_RECEIVER_CAP=90000000000000000000

